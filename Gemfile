# If you have OpenSSL installed, we recommend updating
# the following line to use "https"
source 'http://rubygems.org'

gem "middleman", "~>3"

# For feed.xml.builder
# gem "builder", "~> 3.0"

# Live-reloading plugin
gem "middleman-livereload", "~> 3"

# Database gems
gem "sqlite3"
gem "activerecord"
gem "sinatra-activerecord"

# Base gems
gem "rake"
gem "dotenv"

# Formatter gems
gem "haml"
gem 'therubyracer'
gem "less"
gem "redcarpet"
gem "pygments.rb"

# Watch gems
gem "guard-rspec"
gem "guard-middleman"

# gems
gem "httparty"

group :development, :test do
  # Test gems
  gem 'factory_girl', :require => false
  gem 'database_cleaner', '=1.0.1'
  gem 'rspec'
  gem 'faker'
  gem 'shoulda'
  gem "capybara"
end
